---
import { Image } from "astro:assets"
const { image, title, bgColor, direction, desc, icon, iconDesc } = Astro.props;
---

<section class={`${bgColor} bg`}>
	<div class={`content card ${direction}`}>
		<div class="card__content">
			<div class="card__head">
				{icon && <Image src={icon} alt={iconDesc} class="icon"/>}
				<h3 class="nax__text__shadow title__border">{title}</h3>
			</div>
			<!-- description -->
			<slot />
			<!-- end description -->
		</div>
		<div class="card__image"><Image src={image} alt={title} width={450}/></div>
	</div>
</section>
<style>
	.card{
        align-items: center;
        display: flex;
        justify-content: center;
        padding: 10rem 0;
        position: relative;
        width: 100%;

    }
    .card__content{
        width: 50%;
    }
	.card__head {
		display: inline-flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
    .card__head h3{
		color: white;
		text-shadow: #d3221e 1px 1px 0, var(--primary) 3px 2px 0px;
        font-size: 3rem;
		font-family: 'PeckhamPress-Trial';
        font-weight: 900;
        margin: 0;
		transform: rotate(-10deg);
		transform-origin: 0 0;
    }

	.card__content .icon{
		margin-bottom: 4.5rem;
	}
    .card__content .desc{
		box-sizing: border-box;
		color: white;
		max-width: 500px;
        font-size: 1.5rem;
        font-weight: 400;
        line-height: 1;
		text-transform: uppercase;
		font-family: 'Helvetica-Rounded-Bold';
    }
	.card__reverse{
		flex-direction: row-reverse;
	}
	.card__image{
		animation: productMove 4s ease-in infinite;
	}
	.card__image img{
		filter: drop-shadow(-50px 50px 30px rgba(0,0,0,.6));
	}
	@media screen and (max-width: 480px) {
		.card{
			flex-direction: column-reverse;
			gap: 3rem;
		}
		.card__content{
			width: 80%;
			text-align: center;
		}
		.card__head h3{
			margin: 3rem 0;
			font-size: 2rem;
			padding: 0 1.5rem;
			line-height: 1;
		}
		.card__image img{
			width: 200px;
			height: auto;
		}
	}
</style>