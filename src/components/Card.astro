---
import { Image } from "astro:assets"
const { image, title, bgColor, direction, desc } = Astro.props;
---

<section class={`${bgColor} bg`}>
	<div class={`content card ${direction}`}>
		<div class="card__content">
			<h3 class="nax__text__shadow">{title}</h3>
			<p>{desc}</p>
		</div>
		<div class="papas__imagen"><Image src={image} alt={title} width={450}/></div>
	</div>
</section>
<style>
	.card{
        align-items: center;
        display: flex;
        justify-content: center;
        padding: 10rem 0;
        position: relative;
        width: 100%;

    }
    .card__content{
        width: 50%;
    }
    .card__content h3{
		color: var(--secondary);
		text-shadow: #d3221e 1px 1px 0, var(--primary) 3px 2px 0px;
        font-size: 3rem;
        font-weight: 900;
        margin: 0;
    }
    .card__content p{
		box-sizing: border-box;
		color: white;
		max-width: 500px;
        font-size: 1.5rem;
        font-weight: 400;
        line-height: 0.9;
    }
	.card__reverse{
		flex-direction: row-reverse;
	}

	@media screen and (max-width: 480px) {
		.card{
			flex-direction: column-reverse;
		}
		.card__content{
			width: 80%;
			text-align: center;
		}
		.card__content h3{
			line-height: 1;
		}
	}
</style>