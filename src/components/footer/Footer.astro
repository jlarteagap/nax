<style is:global>
    footer{
        display: flex;
        justify-content: space-between;
        padding: 2rem;
        align-items: center;
        background-image: url(../../../public/images/background/bg__footer.png);
        background-size: contain;
    }
    .social__icons{
        display: flex;
        gap: 1rem;
    }
    .social__link{
        text-decoration: dashed;
    }
    .social__link svg{
        width: 16px;
        height: 16px;
        fill: rgb(90, 90, 90);
        transition: all 0.3s;
    }
    .social__link:hover svg{
        transform: translateY(-0.5rem);
        fill: var(--secondary);
    }
    .footer__logo{
        transition: all 0.3rem.
    }
    .footer__logo:hover, .footer__logo:active, .footer__logo:focus{
        transform: translateY(-0.5rem);
    }

    .footer__info{
        display: flex;
        gap: 1rem;
        align-items: center;
    }
    .footer__info__data{
        display: flex;
        gap: 1rem;
        padding-block-end: 0.5rem;
    }
    .footer__info__data svg{
        fill: rgb(90, 90, 90);
        width: 12px;
        height: auto;
        transition: all 0.3s;
    }
    .footer__info a{
        color: rgb(90, 90, 90);
        text-decoration: none;
        transition: all 0.2s;
    }
    .footer__info__data:hover{
        color: var(--secondary);
    }
    .footer__info__data:hover svg {
        fill: var(--secondary);
        transform: translateY(-0.3rem);
    }

    @media screen and (max-width: 480px) {
        footer{
            flex-direction: column;
            gap: 3rem;
        }
    }
</style>