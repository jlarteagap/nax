---
import { Image } from "astro:assets";

import paClasicas from '../../../public/images/products/papas-clasicas.png'
import papaPicantes from '../../../public/images/products/papas-picantes.png'
import papaFuego from '../../../public/images/products/papas-fuego.png'
import nachos from '../../../public/images/products/nacho-clasico.png'
import nachosPicantes from '../../../public/images/products/nacho-picante.png'
import saboresExtremos from '../../../public/images/sabores-extremos.png'
import VideoProducto from "./videoProducto.astro";

---

<div class="top__content bg bg--orange">
    <div class="hero__content content hero">
        <div class="nax__paquetes">
                <Image class="nax__images image1" src={nachos} alt="Papas Clasicas Nax" width={280} />
                <Image class="nax__images image2" src={nachosPicantes} alt="Papas Clasicas Nax" width={280} />
                <Image class="nax__images image3" src={paClasicas} alt="Papas Clasicas Nax" width={280} />
                <Image class="nax__images image4" src={papaPicantes} alt="Papas Clasicas Nax" width={280} />
                <Image class="nax__images image5" src={papaFuego} alt="Papas Clasicas Nax" width={280} />
        </div>

        <div class="nax__hero__title">
            <h3 class="nax__hero__title__head">Dejate sorprender por todos nuestros</h3>
            <Image src={saboresExtremos} alt="Sabores extremos" width={300} />
        </div>
    </div>
    <VideoProducto/>
</div>

<style>
    .hero__content{
        display: flex;
        justify-content: center;
        height: 100vh;
        overflow: hidden;
    }
    .nax__paquetes{
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
    }
    .nax__imagenes{
        position: relative;
        width: 100%;
    }
    .nax__hero__title{
        position: absolute;
        margin: 0 auto;
        z-index: 1;
        top: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        font-family: 'Comictastic';
    }
    .nax__hero__title__head{
        font-size: 5rem;
        width: 60%;
        text-align: center;
        line-height: 0.8;
        text-transform: uppercase;
        margin-bottom: 1rem;
        position: relative;
        z-index: 10;
    }
    .hero{
        color: white;
        position: relative;
        width: 90%;
    }
    .nax__images{
        position: absolute;
        transform: translateX(-50%);
        z-index: 0;
    }
    .image1{
        left: 5%;
    }

    .image2{
        left: 10%;
        rotate: -20deg;
    }
    
    .image3{
        left: 75%;
        rotate: -5deg;
        z-index: 1;
    }
    .image4{
        left: 80%;
        rotate: 5deg;
        top: 30%;
        z-index: 0;
    }
    .image5{
        left: 85%;
        rotate: 7deg;
        z-index: 1;
    }
    @media screen and (max-width: 480px) {
        .hero{
            display: flex;
            flex-direction: column;
            height: 100%;
            position: relative;
            width: 100%;
            align-items: center;
            justify-content: center;

        }
        .nax__imagenes{
            width: 100%;
            height: 100%;
        }
        .nax__paquetes{
            position: absolute;
        }
        .image1, .image2, .image3, .image4,.image5{
            width: 100px;
            height: auto;
        }

        .nax__hero__title__head{
            margin-top: 0;
            font-size: 2rem;
            box-sizing: border-box;
            padding: 0 1rem;
            width: 100%;
        }
        .image1{
            left: 60%;
            top: 150px;

        }
        .nax__hero__title{
            position: relative;
            text-align: center;
        }

        .nax__hero__title img{
            width: 180px;
            height: auto;
        }
        .image2{
            left: 52%;
            top: 130px;
            rotate: -20deg;
            position: absolute;
        }
        .image3{
            bottom: 200px;
            left: 40%;
            rotate: -26deg;
        }
        .image4{
            left: 55%;
            rotate: -0deg;
            width: 120px;
            z-index: 2;
            top: inherit;
            bottom: 150px;
        }
        .image5{
            left: 70%;
            rotate: 23deg;
            width: 100px;
            bottom: 130px;
        }
    }
</style>