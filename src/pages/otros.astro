---
import Layout from "../layouts/Layout.astro"
import { Image } from "astro:assets"
import tocinax from "../../public/images/products/tocinax.png"
import mix from "../../public/images/products/mix.png"
import Card from "../components/Card.astro"
---

<Layout title="Otros productos - NAX SNAX">
    <Card
        image={mix} 
        title="Mix Nax" 
        desc="La combinación perfecta de todos los mundos con una combinación de todos tus NaxSnax favoritos. Te retamos a que te resistas!"
        bgColor="top__content bg--ocean"
        />
        <Card
        image={tocinax} 
        title="Toxinax" 
        desc="Te presentamos uno de tus favoritos Tocinax, con una crocancia única y un sabor extremo a delicioso tocino. No podrás parar de probarlo!"
        bgColor="bg--orange"
        direction="card__reverse"
    />
</Layout>